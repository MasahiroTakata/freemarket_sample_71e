#account-page.account-page
  .account-page__inner.clearfix.user-form
    %h1.account-page__inner__user-head ログイン
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .account-page__inner__field
        .account-page__inner__field__label
          = f.label :email
        .account-page__inner__field__input
          = f.email_field :email, autofocus: true,placeholder: "email"
      .account-page__inner__field
        .account-page__inner__field__label
          = f.label :password
        .account-page__inner__field__input
          = f.password_field :password, autocomplete: "off",placeholder: "英数字7文字以上"
      .actions
        = f.submit "ログイン", class: 'btn'
  .account-page__sing-up      
    = link_to "初めてご利用になる方", new_registration_path(resource_name), class: 'sing-up'