              = icon('fas', 'angle-right')
          %li
            = link_to "/users/sign_out", method: :delete, class: "list-item" do
              ログアウト
              = icon('fas', 'angle-right')
    .mypage__content__main
      -# .mypage-container.clearfix
      .mypage__credit
        .mypage__credit__main
          %h2.mypage__credit__main__payment
            支払い方法
          -# .mypage__notification.mypage__notification--success
          .mypage__credit__main__list
          .mypage__credit__main__information
            %h3.mypage__credit__main__information__header
              クレジットカード一覧
            %ul.mypage__credit__main__information__box
              %li
                -# .signup-main__content.signup-main__content--form{ action: '#', method: 'GET' }
                .mypage__credit__main__information__box__left{ action: '#', method: 'GET' }
                  .mypage__credit__main__information__box__left__icon
                    = image_tag 'jcb-logomark-img-02.gif', width: '40', height: '30', alt: 'jcb'
                  .mypage__credit__main__information__box__left__num
                    = "**** **** **** " + @default_credit_information.last4
                  .mypage__credit__main__information__box__left__num
                    - exp_month = @default_credit_information.exp_month.to_s
                    - exp_year = @default_credit_information.exp_year.to_s.slice(2,3)
                    = exp_month + ' / ' + exp_year
                = form_tag(delete_credit_index_path, method: :post, id: 'charge-form',  name: 'inputForm', class: 'mypage__credit__main__information__box__right') do
                  %input{ type: 'hidden', name: 'card_id', value: '' }
                  %button.mypage__credit__main__information__box__right__remove 削除する
            .mypage__credit__main__information__footer
              .mypage__credit__main__information__footer__regist
                = link_to new_credit_path, class: 'signup-main__btn-default signup-main__btn-red signup-main__submit_button' do
                  = icon 'far', 'credit-card'
                  クレジットカードを追加する
              .mypage__credit__main__information__footer__not-regist
                = link_to '#', target: "_blank" do
                  %span 支払い方法について
                  = icon 'fas', 'chevron-right'
