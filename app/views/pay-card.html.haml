            %br
          .pay-card-security
            %label セキュリティコード
            = text_field_tag "cvc", "", class: "cvc", placeholder: "カード背面3~4桁の番号", maxlength: "4", id: "cvc"
            #card_token
          .pay-card-link
            %button.payment-content__link__btn{type: 'submit'}
              = link_to "追加する"
                
