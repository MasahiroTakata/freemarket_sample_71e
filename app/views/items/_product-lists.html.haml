.productlists
  - items.each do |item|
    -if item.buyer_id.present?
      .productlists__productlist
        %p.soldout SOLD OUT
        %figure
          - item.item_images.first(1).each do |image|
            = image_tag "#{image.image}", class: :sub_image, height: '150px', width: '156px'
        .productlist--body
          %h3.name
            = item.name
          .details
            %ul
              %li
                = item.price
                円
              %li
                = image_tag 'star.svg', height: '15px', width: '15px'
                0
            %p (税込)  
    -else
      .productlists__productlist
        %p.sale "売り出し中"
        %figure
          - item.item_images.first(1).each do |image|
            = image_tag "#{image.image}", class: :sub_image, height: '150px', width: '156px'
        .productlists__productlist--body
          %h3.name
            = item.name
          .details
            %ul
              %li
                = item.price
                円
              %li
                = image_tag 'star.svg', height: '15px', width: '15px'
                0
            %p (税込)
